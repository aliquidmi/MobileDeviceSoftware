<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MironovaLab4Var14.MironovaLab4Var14"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label
                x:Name="StudentLabel"
                BackgroundColor="Yellow"
                TextColor="Blue"
                FontSize="16"
                Padding="8"
                HorizontalOptions="Fill" />

            <VerticalStackLayout Spacing="12">

                <Frame BorderColor="Brown" WidthRequest="200" HeightRequest="250" HasShadow="False" HorizontalOptions="Center">
                    <Image Aspect="Fill" Source="{Binding WebImg}" />
                </Frame>

                <Frame BorderColor="Brown" WidthRequest="200" HeightRequest="250" HasShadow="False" HorizontalOptions="End">
                    <Image Aspect="AspectFit" Source="{Binding FileImg}" />
                </Frame>

                <Frame BorderColor="Brown" WidthRequest="200" HeightRequest="250" HasShadow="False" HorizontalOptions="Start">
                    <Image Aspect="AspectFill" Source="{Binding ResourceImg}" />
                </Frame>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
