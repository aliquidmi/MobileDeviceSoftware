<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MironovaLab6Var14.Views.MironovaPage1"
    Title="Мови програмування">

    <ScrollView>
        <VerticalStackLayout Padding="20">

            <Label Text="Мови програмування"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Languages}"
                    SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                    SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Padding="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontSize="18"/>
                                <Label Text="{Binding Company}"/>
                                <Label Text="{Binding ReleaseDate, StringFormat='Реліз: {0:yyyy-MM-dd}'}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Entry Placeholder="Назва" Text="{Binding NewName}" />
            <Entry Placeholder="Компанія" Text="{Binding NewCompany}" />
            <DatePicker Date="{Binding NewDate}" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Додати" Command="{Binding AddCommand}" />
                <Button Text="Редагувати" Command="{Binding EditCommand}" />
                <Button Text="Видалити" Command="{Binding DeleteCommand}" />
            </HorizontalStackLayout>

            <Label Text="2023 рік"
                   HorizontalOptions="Center"
                   TextColor="Gray"
                   Margin="10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
