<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MironovaLab2Var14.MironovaLab2Var14"
             Title="MironovaLab2Var14"
             BackgroundColor="Yellow">

    <VerticalStackLayout Padding="20" Spacing="25">

        <Label Text="Міронова Алла&#10;Лабораторна робота №2&#10;Варіант 14"
               FontSize="18"
               TextColor="Black"
               Margin="30,0,0,0" />

        <Label x:Name="outputLabel"
               FontSize="22"
               TextColor="DarkBlue"
               HorizontalOptions="Center" />

        <Entry x:Name="inputEntry"
               Placeholder="Введіть Email"
               FontSize="22"
               TextColor="Black"
               Keyboard="Email">
            <Entry.Keyboard>
                <Keyboard x:FactoryMethod="Create">
                    <x:Arguments>
                        <KeyboardFlags>CapitalizeSentence</KeyboardFlags>
                    </x:Arguments>
                </Keyboard>
            </Entry.Keyboard>
        </Entry>

    </VerticalStackLayout>
</ContentPage>
    